.Side-bar
  .Side-bar__user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__Icons
        %li.top-items__Icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.top-items__Icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Group  
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message