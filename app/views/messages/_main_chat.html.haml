.Chat-main
  .Chat-main__group-info
    .header-group      
      .header-group__name
        = @group.name
      .header-group__list
        .header-group__list--member
          Member : 
        - @group.users.each do |user|
          .header-group__list--name
            = user.name
    = link_to edit_group_path(@group), class: "header-editButton" do
      Edit
  .Chat-main__message-list
    = render @messages



  .Chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content,  class: 'Form__content', placeholder: "type a message"
        = f.label :image, class: 'Form__image' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'Form__submit'

      